{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "lib": ["dom", "es6"],
    "skipLibCheck": true, 
    "esModuleInterop": true, 
    "resolveJsonModule": true, 
    "moduleResolution": "node" 
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts", 
    "src/**/*.js" 
  ],
  "exclude": [
    "node_modules", 
    "lib", 
    "dist"
  ]
}
